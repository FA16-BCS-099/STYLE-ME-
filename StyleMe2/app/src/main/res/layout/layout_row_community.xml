<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/colorActivityBackground"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/img_product"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_logo" />
        <RelativeLayout
            android:layout_below="@id/img_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="2dp">

            <ImageView
                android:id="@+id/img_name"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="3dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_name" />

            <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/img_name"
                android:layout_toEndOf="@id/img_name"
                android:paddingStart="3dp"
                android:text="name"
                android:padding="2dp"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10dp" />

            <ImageView
                android:layout_alignBaseline="@+id/img_name"
                android:layout_below="@+id/img_name"
                android:id="@+id/img_texture"
                android:padding="3dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_texture" />

            <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_below="@+id/img_name"
                android:id="@+id/tv_texture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/img_texture"
                android:layout_toEndOf="@id/img_texture"
                android:paddingStart="3dp"
                android:text="texture"
                android:padding="2dp"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10dp" />

            <ImageView
                android:layout_below="@id/img_texture"
                android:id="@+id/img_worth"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="3dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_worth" />

            <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/tv_worth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/img_worth"
                android:layout_below="@+id/img_texture"
                android:layout_alignBaseline="@id/img_worth"
                android:padding="2dp"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:text="worth"

                android:textColor="@color/colorPrimaryDark"
                android:textSize="10dp" />
            <ImageView
                android:layout_alignBaseline="@+id/img_worth"
                android:layout_below="@id/img_worth"
                android:id="@+id/img_exchnage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="3dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_exchange" />

            <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_below="@+id/img_worth"
                android:id="@+id/tv_exchange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/img_exchnage"
                android:layout_alignBaseline="@id/img_exchnage"
                android:padding="2dp"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:text="exchange"

                android:textColor="@color/colorPrimaryDark"
                android:textSize="10dp" />

            <ImageView
                android:layout_alignBaseline="@+id/img_exchnage"
                android:layout_below="@id/img_exchnage"
                android:id="@+id/img_contact"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="3dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_contact" />

            <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_below="@+id/img_exchnage"
                android:id="@+id/tv_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/img_worth"
                android:padding="2dp"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:autoLink="phone"
                android:textColorLink="@color/colorPrimaryDark"
                android:text=""
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10dp" />
            <ImageView
                android:layout_alignBaseline="@+id/img_location"
                android:layout_below="@id/img_contact"
                android:id="@+id/img_location"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="3dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_place_black_24dp" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_contact"
                android:layout_alignBaseline="@id/img_location"
                android:layout_toEndOf="@id/img_location"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:padding="2dp"
                android:text="location"
                android:textAlignment="gravity"

                android:textColor="@color/colorPrimaryDark"
                android:textSize="10dp" />
            <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_alignBaseline="@+id/img_location"
                android:layout_below="@id/img_location"
                android:id="@+id/tv_availablity"
                android:layout_gravity="end"
                android:text="&#xf111;"
                android:padding="3dp"
                android:textSize="12dp"
                android:textAllCaps="true"
                android:fontFamily="@font/font_awesome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>