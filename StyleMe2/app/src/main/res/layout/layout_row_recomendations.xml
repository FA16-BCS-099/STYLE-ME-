<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/colorActivityBackground"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <ImageView
                android:id="@+id/img_product"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_logo" />
        <RelativeLayout
            android:layout_below="@id/img_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="2dp">

            <ImageView
                android:id="@+id/img_event"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="3dp"
                android:scaleType="centerInside"
                android:src="@drawable/img_event" />

            <TextView
                android:id="@+id/tv_event"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_toEndOf="@id/img_event"
                android:paddingStart="3dp"
                android:text=""
                android:padding="2dp"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10dp" />

            <ImageView
                android:layout_below="@+id/img_event"
                android:id="@+id/img_outfit"
                android:padding="3dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/img_outfit" />

            <TextView
                android:layout_below="@+id/tv_event"
                android:id="@+id/tv_outfit"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_toEndOf="@id/img_event"
                android:paddingStart="3dp"
                android:text=""
                android:padding="2dp"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10dp" />

            <ImageView
                android:layout_below="@id/img_outfit"
                android:id="@+id/img_weather"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="3dp"
                android:scaleType="centerInside"
                android:src="@drawable/weather" />

            <TextView
                android:layout_below="@+id/tv_outfit"
                android:id="@+id/tv_weather"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_toEndOf="@id/img_weather"
                android:paddingStart="3dp"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:text=""
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10dp" />
        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>