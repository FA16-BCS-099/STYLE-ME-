<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">





    <LinearLayout
        android:onClick="openHomeActivity"
        android:layout_margin="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_home"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_home" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home"
            android:drawableEnd="@drawable/ic_next"
            android:textAlignment="gravity"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:textColor="@color/colorThemeDark" />
    </LinearLayout>
    <View
        android:background="@color/colorSliderBg"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <View
        android:background="@color/colorSliderBg"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_margin="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_ar_look" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/ar_looks"
            android:textAlignment="gravity"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:drawableEnd="@drawable/ic_next"
            android:textColor="@color/colorThemeDark" />

    </LinearLayout>
    <View
        android:background="@color/colorSliderBg"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="openCalendarActivity"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_calendar" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:drawableEnd="@drawable/ic_next"
            android:gravity="center_vertical"
            android:text="@string/calendar"
            android:textAlignment="gravity"
            android:textColor="@color/colorThemeDark" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorSliderBg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="openCommunityActivity"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_community" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:drawableEnd="@drawable/ic_next"
            android:gravity="center_vertical"
            android:text="@string/community"
            android:textAlignment="gravity"
            android:textColor="@color/colorThemeDark" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorSliderBg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="openNotificationActivity"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_notification" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:drawableEnd="@drawable/ic_next"
            android:gravity="center_vertical"
            android:text="@string/notification"
            android:textAlignment="gravity"
            android:textColor="@color/colorThemeDark" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorSliderBg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="openAccountActivity"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_account"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_account" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:drawableEnd="@drawable/ic_next"
            android:gravity="center_vertical"
            android:text="@string/account"
            android:textAlignment="gravity"
            android:textColor="@color/colorThemeDark" />
    </LinearLayout>
    <View
        android:background="@color/colorSliderBg"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="onBtnLogoutUser"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_logout"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_logout" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:drawableEnd="@drawable/ic_next"
            android:gravity="center_vertical"
            android:text="@string/logout"
            android:textAlignment="gravity"
            android:textColor="@color/colorThemeDark" />
    </LinearLayout>

</LinearLayout>
</ScrollView>
